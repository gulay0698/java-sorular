
import java.util.Scanner;

public class 1soru {
    public static void main(String[] args) {
        Scanner klavye = new Scanner(System.in);
        int sayi=0, toplam=0;

        while(sayi==15){
            toplam += sayi;
            System.out.println("Bir sayi gir");
            sayi = klavye.nextInt();
        }
        System.out.println("toplam = " + toplam);
    }
}
